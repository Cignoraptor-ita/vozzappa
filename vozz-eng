sed 's/\<immagine\>//g' tes34 > tes35 
sed 's/\<contenere\>//g' tes35 > tes36
sed 's/\<all\>//g' tes36 > tes37
sed 's/\<Commenti\>//g' tes37 > tes38 
sed 's/\<org\>//g' tes38 > tes39
sed 's/\<www\>//g' tes39 > tes40
