sed 's/\<proxy\>//g' tes58 > tes59
sed 's/\<language\>//g' tes59 > tes60
sed 's/\<lang\>//g' tes60 > tes61
sed 's/\<BUTTON\>//g' tes61 > tes62
sed 's/\<web\>//g' tes62 > tes63
sed 's/\<q\>//g' tes63 > tes64
sed 's/\<cat\>//g' tes64 > tes65
